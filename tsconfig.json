{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"],
}
